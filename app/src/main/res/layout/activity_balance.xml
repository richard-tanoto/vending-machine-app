<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.balance.BalanceActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHeadlineBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Total Balance"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeadlineBalance"
        tools:text="Rp50.000,00" />

    <TextView
        android:id="@+id/tvHeadlineTopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="40dp"
        android:text="Top Up"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBalance" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipTopUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:chipSpacingVertical="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeadlineTopUp"
        app:layout_constraintVertical_chainStyle="packed"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip1"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_margin="4dp"
            app:chipStartPadding="12dp"
            app:chipEndPadding="12dp"
            app:chipMinHeight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp2.000,00"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip2"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_margin="8dp"
            app:chipStartPadding="12dp"
            app:chipEndPadding="12dp"
            app:chipMinHeight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp5.000,00"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip3"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_margin="4dp"
            app:chipStartPadding="12dp"
            app:chipEndPadding="12dp"
            app:chipMinHeight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp10.000,00" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip4"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_margin="4dp"
            app:chipStartPadding="12dp"
            app:chipEndPadding="12dp"
            app:chipMinHeight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp20.000,00"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip5"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_margin="4dp"
            app:chipStartPadding="12dp"
            app:chipEndPadding="12dp"
            app:chipMinHeight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp50.000,00" />

    </com.google.android.material.chip.ChipGroup>

    <Button
        android:id="@+id/btnTopUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:text="Top Up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chipTopUp"
        app:layout_constraintVertical_bias="0" />

</androidx.constraintlayout.widget.ConstraintLayout>